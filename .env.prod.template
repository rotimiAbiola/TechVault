# Production Environment Variables Template
# Copy this file to .env.prod and fill in the values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
RDS_ENDPOINT=your-rds-instance.region.rds.amazonaws.com

# Redis Configuration  
ELASTICACHE_ENDPOINT=your-elasticache-cluster.region.cache.amazonaws.com

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Payment Gateway
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# Airflow Configuration
AIRFLOW_FERNET_KEY=your_base64_encoded_fernet_key
AIRFLOW_SECRET_KEY=your_airflow_webserver_secret_key

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your_account.region.snowflakecomputing.com
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=TECHVAULT_ANALYTICS
SNOWFLAKE_SCHEMA=ANALYTICS
SNOWFLAKE_ROLE=ANALYST_ROLE
