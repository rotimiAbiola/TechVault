# Environment variables for local development
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/appdb
POSTGRES_DB=appdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_URL=redis://redis:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# Flask
FLASK_ENV=development
FLASK_DEBUG=true
JWT_SECRET_KEY=your-super-secret-jwt-key-for-development
SECRET_KEY=your-super-secret-flask-key-for-development

# Frontend
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ELASTICSEARCH_URL=http://localhost:9200

# Airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://postgres:postgres@postgres:5432/airflow_db
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-must-be-32-url-safe-base64-encoded-bytes
AIRFLOW__WEBSERVER__SECRET_KEY=your-webserver-secret-key
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false

# Monitoring
GF_SECURITY_ADMIN_PASSWORD=admin

# Snowflake (for data pipeline testing)
SNOWFLAKE_ACCOUNT=your-account
SNOWFLAKE_USER=your-user
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_DATABASE=your-database
SNOWFLAKE_SCHEMA=your-schema
SNOWFLAKE_WAREHOUSE=your-warehouse
